{
  "src_folders": ["./client/src/tests"],
  "output_folder": "./client/src/tests/reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",

  "selenium": {
    "start_process": true,
    "server_path": "./bin/selenium-server-standalone-3.3.1.jar",
    "log_path": false,
    "cli_args": {
      "webdriver.chrome.driver": "./bin/chromedriver",
      "webdriver.gecko.driver": "./bin/geckodriver"
    }
  },

  "test_settings": {
    "default": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "desiredCapabilities": {
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome"
      }
    },

    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox"
      }
    }
  }
}